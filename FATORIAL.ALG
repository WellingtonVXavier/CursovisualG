Algoritmo "Fatorial"

Var

    n, i, fat : inteiro

Inicio
   //fatorial e a mutiplicacao do numero antecessor dele ate 1 com exessao do 0 que 0 fatorial e 1.
   
   escreva("Digital o valor de N: ")
   leia(n)
   
   fat <- 1
   para i de 1 ate n faca
   fat <- fat * i
   fimpara
   
   escreval("fatorial = ", fat)

Fimalgoritmo